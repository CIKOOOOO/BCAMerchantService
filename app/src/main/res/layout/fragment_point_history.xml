<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_color"
    tools:context=".ui.loyalty.point_history.PointHistoryFragment">

    <include
        android:id="@+id/toolbar_back_point_history"
        layout="@layout/toolbar_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_below="@id/toolbar_back_point_history"
        android:background="@color/silver_palette" />

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_layout_point_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar_back_point_history"
        android:layout_marginTop="6dp"
        android:textAlignment="center"
        app:tabBackground="@color/white_color"
        app:tabSelectedTextColor="@color/blackPalette"
        app:tabTextAppearance="@style/MyCustomTabTextAppearance"
        app:tabTextColor="@color/iron_palette" />

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager_point_history"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tab_layout_point_history" />
</RelativeLayout>