<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/rectangle_rounded_stroke_blue">

    <TextView
        android:id="@+id/recycler_promo_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/sniglet_font"
        android:text="Descioutn"
        android:textColor="@color/blackPalette" />

    <TextView
        android:id="@+id/recycler_promo_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/rectangle_rounded_stroke_blue_5dp"
        android:fontFamily="@font/sniglet_font"
        android:padding="5dp"
        android:text="Sedang diproses"
        android:textColor="@color/blue_palette"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/recycler_promo_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/recycler_promo_status"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/sniglet_font"
        android:text="Free 1 xxxxxx Get 1 xxxxx with xxxxxx"
        android:textColor="@color/blackPalette"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/recycler_promo_period"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/recycler_promo_title"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/sniglet_font"
        android:text="Periode: 1 July 2019 - 1 September 2019"
        android:textColor="@color/silver_palette"
        android:textSize="12sp" />
</RelativeLayout>