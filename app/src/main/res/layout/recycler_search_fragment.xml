<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:background="@color/gallery_palette"
    android:orientation="horizontal"
    android:paddingBottom="5dp"
    android:weightSum="2">

    <ImageView
        android:id="@+id/recycler_image_thumbnail_search_fragment"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/recycler_title_search_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:fontFamily="@font/sniglet_font"
            android:maxLines="3"
            android:textColor="@color/blackPalette" />

        <TextView
            android:id="@+id/recycler_writer_search_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/recycler_title_search_fragment"
            android:fontFamily="@font/sniglet_font"
            android:textColor="@color/blackPalette"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/recycler_date_search_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/recycler_writer_search_fragment"
            android:fontFamily="@font/sniglet_font"
            android:textColor="@color/blackPalette"
            android:textSize="10sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/icon_eye" />

            <TextView
                android:id="@+id/recycler_view_count_search_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:textColor="@color/blackPalette" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/smile" />

            <TextView
                android:id="@+id/recycler_like_search_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:textColor="@color/blackPalette" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>